// 显示默认值
$accentColor = rgb(83, 168, 255)
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

.theme-default-content code {
    word-break: break-word;
    border-radius: 2px;
    overflow-x: auto;
    background-color: #fff5f5;
    color: #ff502c;
    font-size: .87em;
    padding: 0.065em 0.4em;
}

.sidebar {
    font-size: 16px;
    background-color: #fff;
    width: 24rem;
    position: fixed;
    z-index: 10;
    margin: 0;
    top: 3.6rem;
    left: 0;
    bottom: 0;
    box-sizing: border-box;
    border-right: 1px solid #eaecef;
    overflow-y: auto;
}
